    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "name": "vscode-jest-tests",
            "request": "launch",
            "program": "${workspaceFolder}/fullstack/server/node_modules/jest/bin/jest",
            "args": [
                "--runInBand",
                "--detectOpenHandles"
            ],
            "cwd": "${workspaceFolder}/fullstack/server",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",

            "name": "Launch Fullstack Server",
            "cwd": "${workspaceFolder}/fullstack/server",
            "program": "${workspaceFolder}/fullstack/server/src/index.js",
            "runtimeExecutable": "${workspaceFolder}/fullstack/server/node.sh"


            //"cwd": "${workspaceFolder}/fullstack/server/",
            //"name": "Launch Program",
            //"program": "${workspaceFolder}/fullstack/server/src/index.js"
        }
    ]
}